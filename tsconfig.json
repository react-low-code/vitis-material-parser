{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "skipLibCheck": true,
    "module": "ES2020",
    "target": "es2018",
    "declaration": true
  },
  "ts-node": {
    "esm": true
  },
  "exclude": [
    "./node_modules"
  ],
  "include": ["src"]
}